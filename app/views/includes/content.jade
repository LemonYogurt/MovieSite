// 菜单和导航部分
.container
   .row
      .page-header.clearfix
         h1= title
         .col-md-4
            small 重度恐怖迷
         .col-md-8
            form(method="GET", action='/results')
               .input-group.col-sm-4.pull-right
                  input.form-control(type="text", name="q")
                  span.input-group-btn
                     button.btn.btn-default(type="submit") 搜索
.navbar.navbar-default.navbar-fixed-bottom
   .container
      .navbar-header
         a.navbar-brand(href="/") 重度恐怖迷
      if user
         p.navbar-text.navbar-right
            span 欢迎您，#{user.name}
            span &nbsp;|&nbsp;
            a.navbar-link(href="/user/logout") 退出
      else
         p.navbar-text.navbar-right
            //- a.navbar-link(href="/user/signup", data-toggle="modal", data-target="#signupModal") 注册
            a.navbar-link(href="/user/signup") 注册
            span &nbsp;|&nbsp;
            //- a.navbar-link(href="/user/signin", data-toggle="modal", data-target="#signinModal") 登录
            a.navbar-link(href="/user/signin") 登录
//-
   #signupModal.modal.fade
      .modal-dialog
         .modal-content
            form(method="POST", action="/user/signup")
               .modal-header 注册
               .modal-body
                  .form-group
                     label(for="signupName") 用户名
                     //- 这样提交表单的时候就能直接拿到user这个对象
                     input#signupName.form-control(name="user[name]", type="text")
                  .form-group
                     label(for="signupPassword") 密码
                     //- 这样提交表单的时候就能直接拿到user这个对象
                     input#signupPassword.form-control(name="user[password]", type="text")
                  .form-group.clearfix
                     label.control-label(for="avatar") 头像
                     input#avatar.form-control(type="file", name="avatar")
                     img.pull-left(src="",id="avatarPreview",width="100" height="100" style="margin:0 auto;display:none;")
                  .modal-footer
                     //- data-dismiss是用来关闭模态窗口的
                     button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                     button.btn.btn-success(type="submit") 注册
   #signinModal.modal.fade
      .modal-dialog
         .modal-content
            form(method="POST", action="/user/signin")
               .modal-header 登录
               .modal-body
                  .form-group
                     label(for="signinName") 用户名
                     //- 这样提交表单的时候就能直接拿到user这个对象
                     input#signinName.form-control(name="user[name]", type="text")
                  .form-group
                     label(for="signinPassword") 密码
                     //- 这样提交表单的时候就能直接拿到user这个对象
                     input#signinPassword.form-control(name="user[password]", type="text")
                  .modal-footer
                     //- data-dismiss是用来关闭模态窗口的
                     button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                     button.btn.btn-success(type="submit") 登录
