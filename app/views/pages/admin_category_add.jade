// 电影分类列表录入页
extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="POST", action="/admin/category/add")
                .form-group
                    label.col-sm-2.control-label(for="inputCategory") 电影分类
                    .col-sm-10
                        //- value=category.name这种赋值与这种赋值value="#{category.name}"是不同的
                        input#inputCategory.form-control(type="text", name="category[name]", value=category.name)
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-default(type="submit") 录入

