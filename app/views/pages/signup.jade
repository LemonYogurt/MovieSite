// 注册
extends ../layout
block content
   .container
      .row
         .col-md-5
            form(method="POST", action="/user/signup", enctype="multipart/form-data")
               .form-group
                  label.control-label(for="signinName") 用户名
                  //- 这样提交表单的时候就能直接拿到user这个对象
                  input#signinName.form-control(name="user[name]", type="text")
               .form-group
                  label.control-label(for="signinPassword") 密码
                  //- 这样提交表单的时候就能直接拿到user这个对象
                  input#signinPassword.form-control(name="user[password]", type="password")
               .form-group.clearfix
                  label.control-label(for="avatar") 头像
                  input#avatar.form-control(type="file", name="avatar")
                  img.pull-left(src="",id="avatarPreview",width="100" height="100" style="margin:0 auto;display:none;")
               .modal-footer
                  //- data-dismiss是用来关闭模态窗口的
                  button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                  button.btn.btn-success(type="submit") 注册
   script(src="/js/signup.js")